<div class="card">
  <div class="card-header">
    Create Post
  </div>
  <div class="card-body">
    <%= form_with model: @post do |form| %>
    <div class="form-group row">
      <div class="col-md-2"> <%= form.label :title %> </div>
        <div class="col-md-6"><%= form.text_field :title ,:readonly => true %></div>
      </div>
    <br/>
    <div class="form-group row">
      <div class="col-md-2"> <%= form.label :description %> </div>
        <div class="col-md-6"> <%= form.text_area :description ,:readonly => true %> </div>
    </div>
    <br/>
    <div class="form-group row mb-0">
	  <div class="col-md-2 offset-md-2">
      <%= form.submit "Confirm"%>
      <%= link_to "Back", 'javascript:history.go(-1);', class:" btn btn-outline" %>
	  </div>
    <% end %>
  </div>
</div>