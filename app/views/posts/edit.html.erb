<div class="card card_option">
    <div class="card-header">
        Create Post
    </div>
    <div class="card-body">
        <%= form_with model: @post, url: post_edit_form_post_path, :html => { :style => 'width: 80%;' } do |form| %>
            <ul>
                <% @post.errors.full_messages.each do |msg| %>
                    <li><%= msg %></li>
                <% end %>
            </ul>
            <div class="form-group mb-3 row">
                <div class="col-sm-5 col-form-label text-end"> <%= form.label :title %> </div>
                <div class="col-sm-7"><%= form.text_field :title, class: "form-control" %></div>
            </div>
            <br/>
            <div class="form-group mb-3 row">
                <div class="col-sm-5 col-form-label text-end"> <%= form.label :description %> </div>
                <div class="col-sm-7"> <%= form.text_area :description, class: "form-control" %> </div>
            </div>
            <div class="form-group mb-3 row">
                <div class="col-sm-5 col-form-label text-end"> <%= form.label :status %> </div>
                <div class="col-sm-7 align-self-center"> <div class="form-check form-switch"><%= form.check_box :status, class: 'form-check-input', id: 'id="flexSwitchCheckChecked"' %> </div></div>
            </div>
            <!-- hidden post id -->
            <%= form.hidden_field :id %>
            <%= form.number_field :create_user_id, value: current_user.id.to_i, type: :hidden %>
            <%= form.number_field :updated_user_id, value: current_user.id.to_i, type: :hidden %>
            <div class="form-group row mb-0">
                <div class="col-sm-5 col-form-label text-end"> </div>
                <div class="col-sm-7">
                    <%= form.submit "Update", class: 'btn btn-primary' %>
                    <%= button_tag "Reset", class: 'btn btn-secondary', type: :reset %>
                </div>
            </div>
        <% end %>
    </div>
</div>

<style>
.card_option{
    width: 50rem;
    margin: 0 auto;
}
</style>