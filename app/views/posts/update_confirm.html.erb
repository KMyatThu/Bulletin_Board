<div class="card card_option">
    <div class="card-header">
        Create Post
    </div>
    <div class="card-body">
        <%= form_with model: @post, url: post_update_post_path, :html => { :style => 'width: 80%;' } do |form| %>
            <ul>
                <% @post.errors.full_messages.each do |msg| %>
                    <li><%= msg %></li>
                <% end %>
            </ul>
            <div class="form-group mb-3 row">
                <div class="col-sm-5 col-form-label text-end"> <%= form.label :title %> </div>
                <div class="col-sm-7"><%= form.text_field :title, class: "form-control", :readonly => true %></div>
            </div>
            <br/>
            <div class="form-group mb-3 row">
                <div class="col-sm-5 col-form-label text-end"> <%= form.label :description %> </div>
                <div class="col-sm-7"> <%= form.text_area :description, class: "form-control", :readonly => true %> </div>
            </div>
            <div class="form-group mb-3 row">
                <div class="col-sm-5 col-form-label text-end"> <%= form.label :status %> </div>
                <div class="col-sm-7 align-self-center"> <div class="form-switch"><%= form.check_box :status, class: 'form-check-input', :disabled => 'true' %> </div></div>
            </div>
            <!-- hidden post id -->
            <%= form.hidden_field :id %>
            <%= form.hidden_field :status %>
            <div class="form-group row mb-0">
                <div class="col-sm-5 col-form-label text-end"> </div>
                <div class="col-sm-7">
                    <%= form.submit "Confirm", class: 'btn btn-primary' %>
                    <%= link_to "Back", 'javascript:history.go(-1);', class: 'btn btn-secondary' %>
                </div>
            </div>
        <% end %>
    </div>
</div>

<style>
.card_option{
    width: 50rem;
    margin: 0 auto;
}
</style>