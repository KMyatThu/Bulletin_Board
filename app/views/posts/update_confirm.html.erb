<div class="card">
  <div class="card-header">
    Create Post
  </div>
  <div class="card-body">
    <%= form_with model: @post, :url => post_update_post_path do |form| %>
    <div class="form-group row">
      <div class="col-md-2"> <%= form.label :title %> </div>
        <div class="col-md-6"><%= form.text_field :title %></div>
      </div>
    <br/>
    <div class="form-group row">
      <div class="col-md-2"> <%= form.label :description %> </div>
        <div class="col-md-6"> <%= form.text_area :description %> </div>
    </div>
    <div class="form-group row">
      <div class="col-md-2"> <%= form.label :status %> </div>
      <div class="col-md-6"> <%= form.check_box :status %> </div>
      </div>
    <%= form.hidden_field :id %>
    <br/>
    <div class="form-group row mb-0">
	  <div class="col-md-2 offset-md-2">
      <%= form.submit "Update" %>
      <%= button_tag "Reset", type: :reset %>
	  </div>
    <% end %>
  </div>
</div>