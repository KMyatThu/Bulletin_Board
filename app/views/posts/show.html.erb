<div class="card card_option card_margin border border-success mx-auto">
    <div class="card-header bg-success text-white border border-success">
        Post Details
    </div>
    <div class="card-body my-3">
        <div class="form-group row p-3">
            <div class="col-sm-3"> Title: </div>
            <div class="col-sm-9"><%= @post.title %></div>
        </div>
        <div class="form-group row p-3">
            <div class="col-sm-3"> Description: </div>
            <div class="col-sm-9"><%= @post.description %></div>
        </div>
        <div class="form-group row p-3">
            <div class="col-sm-3"> Status: </div>
            <div class="col-sm-9"><%= @post.status == 1 ? 'Active' : 'Unactive' %></div>
        </div>
        <div class="form-group row p-3">
            <div class="col-sm-3"> Created Date: </div>
            <div class="col-sm-9"><%= @post.created_at.strftime('%Y/%m/%d') %></div>
        </div>
        <div class="form-group row p-3">
            <div class="col-sm-3"> Created User: </div>
            <div class="col-sm-9"><%= @post.created_user.name %></div>
        </div>
        <div class="form-group row p-3">
            <div class="col-sm-3"> Updated Date: </div>
            <div class="col-sm-9"><%= @post.updated_at.strftime('%Y/%m/%d') %></div>
        </div>
        <div class="form-group row p-3">
            <div class="col-sm-3"> Updated User: </div>
            <div class="col-sm-9"><%= @post.updated_user.name %></div>
        </div>
    </div>
</div>