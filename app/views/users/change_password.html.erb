<div class="card card_option card_margin border border-success mx-auto">
    <div class="card-header bg-success text-white border border-success">
        Change Password
    </div>
    <div class="card-body my-3">
        <%= form_with model: @password_change_form, :url => update_password_user_path, :html => { :style => 'width: 80%;' } do |form| %>
            <ul>
                <%= notice if notice %>
            </ul>
            <ul>
                <% @password_change_form.errors.full_messages.each do |msg| %>
                    <li><%= msg %></li>
                <% end %>
            </ul>
            <div class="form-group row">
                <div class="col-sm-5 col-form-label text-end"> <%= form.label "Current Password" %> </div>
                <div class="col-sm-7"><%= form.password_field :current_password, class: "form-control" %></div>
            </div>
            <br/>
            <div class="form-group row">
                <div class="col-sm-5 col-form-label text-end"> <%= form.label "New Password" %> </div>
                <div class="col-sm-7"> <%= form.password_field :new_password, class: "form-control" %> </div>
            </div>
            <br/>
            <div class="form-group row">
                <div class="col-sm-5 col-form-label text-end"> <%= form.label "New Confirm Password" %> </div>
                <div class="col-sm-7"> <%= form.password_field :new_password_confirmation, class: "form-control" %> </div>
            </div><br/>
            <%= form.hidden_field :id, :value => current_user.id %>
            <div class="form-group row mb-0">
                <div class="col-sm-5 col-form-label text-end"> </div>
                <div class="col-sm-7">
                    <%= form.submit "Update Password", class: 'btn btn-primary' %>
                </div>
            </div>
        <% end %>
    </div>
</div>
