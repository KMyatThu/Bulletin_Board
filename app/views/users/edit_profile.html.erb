<div class="card">
  <div class="card-header">
    Create User
  </div>
  <div class="card-body">
    <%= form_with model: @user, :url => update_profile_user_path(@user) do |form| %>
    <div class="form-group row">
      <div class="col-md-2"> <%= form.label :name %> </div>
        <div class="col-md-6"><%= form.text_field :name , required: true %></div>
      </div>
    <br/>
    <div class="form-group row">
      <div class="col-md-2"> <%= form.label "E-Mail Address" %> </div>
        <div class="col-md-6"> <%= form.text_field :email %> </div>
    </div><br/>
    <div class="form-group row">
      <div class="col-md-2"> <%= form.label "Type" %> </div>
      <div class="col-md-6"> <%= form.text_field :role, :value => User.types.values[@user.role.to_i] %> </div>
    </div><br/>
    <div class="form-group row">
      <div class="col-md-2"> <%= form.label :phone %> </div>
      <div class="col-md-6"> <%= form.text_field :phone %> </div>
    </div><br/>
    <div class="form-group row">
      <div class="col-md-2"> <%= form.label "Date of Birth" %> </div>
      <div class="col-md-6"> <%= form.text_field :dob, id: 'datepicker', :autocomplete => :off %> </div>
    </div><br/>
    <div class="form-group row">
      <div class="col-md-2"> <%= form.label :address %> </div>
      <div class="col-md-6"> <%= form.text_field :address %> </div>
    </div><br/>
    <div class="form-group row">
      <div class="col-md-2"> <%= form.label "Old Profile" %> </div>
      <div class="col-md-6"> <%= image_tag @user.profile, style: 'height:150px;width:auto;' %> </div>
    </div>
    <br/>
    <div class="form-group row">
      <div class="col-md-2"> <%= form.label "New Profile" %> </div>
      <div class="col-md-6"> <%= form.file_field :profile %> </div>
    </div><br/>
    <%= form.hidden_field :id, :value => @user.id %>
    <div class="form-group row mb-0">
	  <div class="col-md-2 offset-md-2">
      <%= form.submit "Edit"%>
      <%= button_tag "Clear", type: :reset %>
	  </div>
    <a href="change_password">Change Password</a>
    <% end %>
  </div>
</div>

<script>
  $( function() {
    $( "#datepicker" ).datepicker({  
       dateFormat: 'yy-mm-dd'
     });
  } );
  </script>