<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">Log in</div>
                <% if notice %><div class="alert alert-danger"><%= notice %> </div> <% end %>
                <div class="card-body">
                    <%= form_tag '/login' do %>
                        <div class="form-group row mb-3">
                            <label for="email" class="col-md-4 col-form-label text-md-right">Email Address:</label>

                            <div class="col-md-6">
                             <%= email_field_tag :email, params[:email], class: 'form-control', :required => 'true'%>
                            </div>
                        </div>
                        <div class="form-group row mb-3">
                            <label for="password" class="col-md-4 col-form-label text-md-right">Password</label>

                            <div class="col-md-6">
                             <%= password_field_tag :password, params[:password], class: 'form-control', :required => 'true'%>
                            </div>
                        </div>
                        <div class="form-group row mb-3">
                            <div class="col-md-8 offset-md-4">
                              <%= check_box_tag :remember_me, 1, params[:remember_me] %>
                                <%= label_tag :remember_me %><br>
                            </div>
                        </div>
                        <div class="form-group row mb-0">
                            <div class="col-md-8 offset-md-4">
                                <%= submit_tag "Log In" , class: "btn btn-primary center-block"%>
                                <%= link_to "forgotten password?", new_password_reset_path %>
                            </div>
                        </div>
                    <% end %>
                </div>
            </div>
        </div>
    </div>
</div>